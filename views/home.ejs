<%- include("partials/header") -%>
<div class="container">
    <h1>Home</h1>
    <p><%= startingContent %></p>

    <%posts.forEach(function(post){%>

    <h2><%= post.title %></h2>

    <p class="inline"><%= post.body.substring(0,100) + "..." %></p>
    <a href="/posts/<%= post.id %>">Read More</a>

    <%})%>
</div>

